@model IEnumerable<BookStore.Utilities.Models.BookViewModel>

@{
    ViewBag.Title = "Index";
}


        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Books</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Author</th>
                                    <th>Title</th>
                                    <th>Price</th>
                                    <th>Number of Stocks</th>
                                    <th>Image</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var imgUrl = "data:image/jpeg;base64," + @item.ImageBase64;
                                    <tr>
                                        <td>@item.Author</td>
                                        <td>@item.Title</td>
                                        <td>@item.Price</td>
                                        <td>@item.NumOfStocks</td>
                                        <td><img style="width:40px" src="@imgUrl"/></td>
                                        <td><a class="btn btn-primary" href="http://localhost:56986/Books/Edit/@item.Id">Edit</a></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Author</th>
                                    <th>Title</th>
                                    <th>Price</th>
                                    <th>Number of Stocks</th>
                                    <th>Image</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
